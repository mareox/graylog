# Server Configuration
GRAYLOG_HOSTNAME=graylog.mareoxlan.local
GRAYLOG_SERVER_IP=192.168.20.240
SSH_USER=mareox
SSH_PORT=22

# Portainer Configuration
PORTAINER_USER=mareox
PORTAINER_PASSWORD=CHANGE_ME
PORTAINER_PORT=9443

# Graylog Configuration
GRAYLOG_VERSION=6.3
GRAYLOG_WEB_PORT=9000
GRAYLOG_TIMEZONE=America/Detroit

# Graylog Security - CHANGE THESE!
# Password secret must be at least 16 characters
GRAYLOG_PASSWORD_SECRET=CHANGE_ME_AT_LEAST_16_CHARACTERS_LONG

# Root password SHA2 hash
# Default is "admin" - Generate your own with: echo -n "yourpassword" | sha256sum
# Example below is SHA2 of "admin" - CHANGE THIS!
GRAYLOG_ROOT_PASSWORD_SHA2=8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918

# Graylog External Access
GRAYLOG_HTTP_EXTERNAL_URI=http://graylog.mareoxlan.local:9000/

# OpenSearch Configuration
OPENSEARCH_PORT=9200
OPENSEARCH_MEMORY=1g
# Must meet complexity requirements: letters and numbers
OPENSEARCH_ADMIN_PASSWORD=SetPassw0rdL3ttersAndNumb3r5

# Email/SMTP Configuration (Optional)
GRAYLOG_TRANSPORT_EMAIL_ENABLED=false
GRAYLOG_TRANSPORT_EMAIL_PROTOCOL=smtp
GRAYLOG_TRANSPORT_EMAIL_HOSTNAME=outbound.mailhop.org
GRAYLOG_TRANSPORT_EMAIL_PORT=587
GRAYLOG_TRANSPORT_EMAIL_USE_AUTH=true
GRAYLOG_TRANSPORT_EMAIL_AUTH_USERNAME=your_smtp_username
GRAYLOG_TRANSPORT_EMAIL_AUTH_PASSWORD=your_smtp_password
GRAYLOG_TRANSPORT_EMAIL_USE_TLS=true
GRAYLOG_TRANSPORT_EMAIL_USE_SSL=false
GRAYLOG_TRANSPORT_FROM_EMAIL=graylog@mareoxlan.local
GRAYLOG_TRANSPORT_SUBJECT_PREFIX=[graylog]
